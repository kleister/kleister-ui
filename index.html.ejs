<!DOCTYPE html>

<html lang="en">
  <head>
    <% if (htmlWebpackPlugin.options.goTemplate) { %>
      <base href="{{ .Root }}" />
    <% } else { %>
      <base href="/" />
    <% } %>

    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />

    <meta content="Manage mod packs for Minecraft" name="description" />
    <meta content="Kleister Team" name="author" />

    <title>Kleister</title>
    <link href="/images/favicon.ico" rel="icon" type="image/x-icon" />

    <% for (var i = 0; i < htmlWebpackPlugin.files.css.length; i++) { %>
      <link href="<%= htmlWebpackPlugin.files.css[i] %>" rel="stylesheet" />
    <% } %>
  </head>
  <body role="document">
    <div id="kleister"></div>

    <% if (htmlWebpackPlugin.options.goTemplate) { %>
      <script>
        window.STATE_FROM_SERVER = { base: "{{ .Root }}", api: "{{ .Endpoint }}" };
      </script>
    <% } else { %>
      <script>
        window.STATE_FROM_SERVER = { base: "/", api: "" };
      </script>
    <% } %>

    <% for (var i = 0; i < htmlWebpackPlugin.files.js.length; i++) { %>
      <script src="<%= htmlWebpackPlugin.files.js[i] %>"></script>
    <% } %>
  </body>
</html>
